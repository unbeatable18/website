    <script>
        // Sync Theme from LocalStorage
        const theme = localStorage.getItem('theme') || 'light';
        if(theme !== 'light') document.body.classList.add(theme + '-mode');

        // Document Toggler
        function showDoc(docType) {
            const presViewer = document.getElementById('presentation-viewer');
            const paperViewer = document.getElementById('paper-viewer');
            const buttons = document.querySelectorAll('.switch-btn');

            buttons.forEach(btn => btn.classList.remove('active'));

            if (docType === 'presentation') {
                presViewer.classList.remove('hidden');
                paperViewer.classList.add('hidden');
                buttons[0].classList.add('active');
            } else {
                presViewer.classList.add('hidden');
                paperViewer.classList.remove('hidden');
                buttons[1].classList.add('active');
            }
        }

        // Cursor Logic
        const dot = document.querySelector('.cursor-dot');
        const outline = document.querySelector('.cursor-outline');

        window.addEventListener('mousemove', (e) => {
            dot.style.left = `${e.clientX}px`;
            dot.style.top = `${e.clientY}px`;
            outline.animate({
                left: `${e.clientX}px`,
                top: `${e.clientY}px`
            }, { duration: 500, fill: "forwards" });
        });

        document.querySelectorAll('a, button').forEach(el => {
            el.addEventListener('mouseenter', () => document.body.classList.add('cursor-active'));
            el.addEventListener('mouseleave', () => document.body.classList.remove('cursor-active'));
        });
    </script>
</body>
